{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./*"]
    },
    "noImplicitAny": false // âœ… suffisant pour corriger les erreurs `any` sans `suppressImplicitAnyIndexErrors`
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "types"],
  "exclude": ["node_modules"]
}
